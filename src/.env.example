# Copy this file to .env and fill in values. Never commit .env with real secrets.
# Required for app to run: DB_*, JWT_SECRET, LOGIN_ENC_KEY, LOGIN_ENC_SALT

# ---- Database (required) ----
DB_SERVER=
DB_DATABASE_NAME=
DB_USER=
DB_PASSWORD=
DB_ENCRYPT=true
DB_TRUST_SERVER_CERT=false

# Connection pool (optional; defaults in code)
DB_POOL_MAX=25
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONN_MAX_LIFETIME_MS=3600000

# ---- JWT (required for auth) ----
JWT_SECRET=
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ---- Login / password encryption (required for login) ----
LOGIN_ENC_KEY=
LOGIN_ENC_SALT=

# ---- App ----
PORT=8080
ENVIRONMENT=development
DOMAIN=

# ---- Domain URLs (optional) ----
CLIENT_DOMAIN_URL=
EMPLOYEE_DOMAIN_URL=
LAB_DOMAIN_URL=

# ---- Logging (optional) ----
LOG_DIR=logs
LOG_RETENTION_HOURS=24

# ---- Ping endpoint (optional; dev sets at build/deploy) ----
LAST_BUILD_PUSHED=
LATEST_COMMIT=
